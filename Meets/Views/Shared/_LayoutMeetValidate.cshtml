<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/toastr.js"></script>
</head>
<body style="font-family:Corbel;color:#000000;font-weight:500;">
    <div id="container">
        <nav class="navigation">
            @*<a href="~/Events/EventDefaultUser"><input class="btnstyleHeader" type="button" value="Eventübersicht" /></a>*@
            <a href="~/Home/Index"><input class="btnstyleHeader" type="button" value="Home" /></a>
        </nav>
       
        <div id="content">
            <div class="backcolor">
                <h2 class="center" style="font-family:Corbel;">Deine Eingabe wurde bestätigt!</h2>
                <h2 class="center" style="font-family:Corbel;">Übersicht der Veranstaltung</h2>
            </div>
            <br />
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @*Einbinden der Validierung*@
    @Scripts.Render("~/bundles/jqueryval")
    @*Einbinden für Datepicker*@
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "positionClass": "toast-top-full-width",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $(document).ready(function () {

            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                    toastr.error("", "@TempData["ErrorMessage"]");
                </text>
            }

            @if (TempData["ConfirmMessage"] != null)
            {
                <text>
                    toastr.success("", "@TempData["ConfirmMessage"]");
                </text>
            }

            });
    </script>
</body>
</html>

