<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    
</head>

<body>
    <div id="container">
        <div id="header">
            <img src="~/img/HeaderNewMeetsSchmal.jpg" />
            <div class="oben1">
                <a href="~/Abmelden/Logout"><input class="btnstyleHeader" type="button" value="Abmelden" /></a>
                <a href="~/Home/Index"><input class="btnstyleHeader" type="button" value="Home" /></a>
            </div>
        </div>
        <div id="content">
            <br />
            <div class="backwithe">
                <h2 class="center">Hallo du kannst jetzt Veranstaltungen eintragen.</h2>
                <p align="center">Die Einladung kann per E-Mail versendet werden.<br />Falls du dich Abmelden möchtest klicke auf Abmelden.<br />Bitte keine pseudo Veranstaltungen eintragen DANKE!</p>
                
            </div>
            <div><h2 class="center">Veranstaltungsverwaltung</h2></div>
            <div class="contentEvent">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @*Einbinden der Validierung*@
    @Scripts.Render("~/bundles/jqueryval")
    @*Einbinden für Datepicker*@
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "positionClass": "toast-top-right",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $(document).ready(function () {

            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                    toastr.error("", "@TempData["ErrorMessage"]");
                </text>
            }

            @if (TempData["ConfirmMessage"] != null)
            {
                <text>
                    toastr.success("", "@TempData["ConfirmMessage"]");
                </text>
            }

            });
    </script>


</body>
</html>

