@model Meets.Models.Event

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCreateEvent.cshtml";
}

@section MyCss{
    @Styles.Render("~/Content/datepicker")
    }

@section scripts{
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datetimepicker').datepicker({
            dateFormat: 'yy/mm/dd'
        }); //Initialise any date pickers
    });

</script>
    
    }

<div class="scrollAddEvent">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
            <div class="form-group">
                @Html.Label("Event Datum:", htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.eventdate, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.eventdate, new { htmlAttributes = new { @class = "form-control datetimepicker", @*id = "datetimepicker"*@ } })
                    @Html.ValidationMessageFor(model => model.eventdate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Event Titel:", htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Beschreibung:", htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            @*Wenn der Benutzer nicht Validiert ist das Event immer privat*@
            @if (ViewBag.nurPrivate != 0)
            {
                <div class="form-group">
                    @Html.Label("Öffentlich ja/Nein:", htmlAttributes: new { @class = "control-label col-md-2" })
                    @*@Html.LabelFor(model => model.viewpublic, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.viewpublic)
                            @Html.ValidationMessageFor(model => model.viewpublic, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.Label("Event Standort:", htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.location, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="margin-left:150px;padding:20px 0;">
                @if (ViewBag.fehlendeeingabe != null)
                {
                    <div class="text-danger">@ViewBag.fehlendeeingabe</div>
                }
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Event Erzeugen" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
