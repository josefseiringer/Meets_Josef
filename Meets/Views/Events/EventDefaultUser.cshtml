@model List<Meets.Models.fn_Show_Event_Table_Result>

@{
    ViewBag.Title = "EventDefaultUser";
    Layout = "~/Views/Shared/_LayoutMeetsEventsSingle.cshtml";
}

<div style="margin-bottom:10px;"><h3 style="float:right">@User.Identity.Name</h3></div>
<label class="linkAsBtn">@Html.ActionLink("Hinzufügen", "Create", "Events")</label>

 
@foreach (var item in Model)
{
    <div class="backwitheEvent">
        <table>
            <tr>
                <td style="padding-left:10px;">@Html.HiddenFor(modelItem => item.id)</td>
            </tr>
            <tr>
                <th>Titel:</th>
                <td style="padding-left:10px;">@Html.DisplayFor(modelItem => item.title)</td>
            </tr>
            <tr>
                <th>Eventdatum:</th>
                <td style="padding-left:10px;">@Html.DisplayFor(modelItem => item.evdate)</td>
            </tr>
            <tr>
                <th>Beschreibung:</th>
                <td style="padding-left:10px;">@Html.DisplayFor(modelItem => item.evdesc)</td>
            </tr>
            <tr>
                <th>Für alle Einsehbar</th>
                <td style="padding-left:10px;">@Html.DisplayFor(modelItem => item.pub)</td>
            </tr>
            <tr>
                <th>Standort:</th>
                <td style="padding-left:10px;">@Html.DisplayFor(modelItem => item.loc)</td>
            </tr>
            <tr>
                <th>Links:</th>
                <td style="padding-left:10px;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
                    @Html.ActionLink("Verteilen", "Verteiler", "Events", new { id = item.id })
                </td>
            </tr>
        </table>
    </div>
}




